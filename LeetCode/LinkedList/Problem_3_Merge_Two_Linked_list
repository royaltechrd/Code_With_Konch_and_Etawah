# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeTwoLists(self, list1: Optional[ListNode], list2: Optional[ListNode]) -> Optional[ListNode]:
        dummy= ListNode()
        cur=dummy
        cur1=list1
        cur2=list2
        iflist1 == None && list2 == None:
            return None;
        if list1 == None
            return list2;
        if list2 == None
            return list1;
          
        while cur1!=None or cur2!=None:
            
              
            while cur1!=None or cur2!=None:
                if cur1:
                    val1=cur1.val
                else:
                    val1=0
                if cur2:
                    val2=cur2.val
                else:
                    val2=0
                if val1==0 and val2!=0 :
                    cur.next=cur2
                    print(cur2)
                    cur2=cur2.next
                    
                if val2==0 and val1!=0 :
                    cur.next=cur1
                    print(cur1)
                    cur1=cur1.next
                if val1!=0 and val2!=0:    
                    if val1<val2:
                        cur.next=cur1
                        print(cur)
                        cur1=cur1.next
                        print(cur1,cur2)
                    elif val2<val1:
                        cur.next=cur2
                        print(cur)
                        cur2=cur2.next
                        print(cur1,cur2)
                    else:
                        cur.next=cur1
                        cur=cur.next
                        cur1=cur1.next
                        cur.next=cur2
                        cur2=cur2.next
                    cur=cur.next
                    print(cur)
            return dummy.next
