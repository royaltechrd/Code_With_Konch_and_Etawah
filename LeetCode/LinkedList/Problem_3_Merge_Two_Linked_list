#Alternate 1:

class Solution:
    def mergeTwoLists(self, list1: Optional[ListNode], list2: Optional[ListNode]) -> Optional[ListNode]:
        dummy= ListNode()
        cur=dummy
        while list1 and list2:  #Checking whether any list is empty 
            if list1.val<list2.val:
                cur.next=list1
                list1=list1.next
                print(cur,list1)
                
                cur=cur.next
            else:
                cur.next=list2
                list2=list2.next
                cur=cur.next
        if list1 or list2:                      #checking whether one list is non empty and left to merge with the the new Linked List
            cur.next=list1 if list1 else list2
        return dummy.next
        
