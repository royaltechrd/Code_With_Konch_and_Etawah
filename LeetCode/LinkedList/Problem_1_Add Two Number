#Python Solution of Add Two Numbers 
#By Prashant

# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):0
#         self.val = val
#         self.next = next
class Solution:
    def addTwoNumbers(self, l1: Optional[ListNode], l2: Optional[ListNode]) -> Optional[ListNode]:
        
        dummy=ListNode()
        
        cur=dummy    #Now Pointer of dummy turned to cur 
        
        carry=0      # Take care of carry
        
        while l1 or l2 or carry:    #Check l1 or l2 or carry empty then return the func
            if l1:      # Getting the Value from List 1
                val1=l1.val
            if l2:      ## Getting the Value from List 2
                val2=l2.val
                
                
            suml3=val1+val2+carry 
            
            cur.next=ListNode(suml3%10) #Creating the Next node for the Dummy Linked List
            print(cur.next)
            
            cur=cur.next                #Changing the pointer to the Next
            
            carry=suml3//10
            if l1:
                l1=l1.next
            if l2:
                l2=l2.next
        
        return dummy.next
